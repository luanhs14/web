# =========================================
# EXEMPLO DE CONFIGURAÇÃO NGINX
# =========================================
#
# Salve este arquivo como:
# /etc/nginx/sites-available/qrbox
#
# Depois ative:
# sudo ln -s /etc/nginx/sites-available/qrbox /etc/nginx/sites-enabled/
# sudo nginx -t
# sudo systemctl reload nginx
#

server {
    listen 80;
    listen [::]:80;

    # Altere para seu domínio ou IP
    server_name qrbox.local localhost;

    # Diretório do projeto
    root /var/www/qrbox;
    index index.php index.html;

    # Limite de upload (para fotos)
    client_max_body_size 20M;

    # Logs
    access_log /var/log/nginx/qrbox_access.log;
    error_log /var/log/nginx/qrbox_error.log;

    # Charset
    charset utf-8;

    # Desabilitar logs para arquivos estáticos
    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location = /robots.txt {
        access_log off;
        log_not_found off;
    }

    # Bloquear acesso a arquivos ocultos
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Bloquear acesso a arquivos de banco de dados
    location ~* \.(db|sqlite|sqlite3)$ {
        deny all;
    }

    # Processar PHP
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;

        # Altere conforme sua versão do PHP
        fastcgi_pass unix:/var/run/php/php8.3-fpm.sock;
        # OU (se usar porta TCP):
        # fastcgi_pass 127.0.0.1:9000;

        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;

        # Timeout para upload de fotos
        fastcgi_read_timeout 300;
    }

    # Rewrite rules - similar ao Apache
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Cache para imagens
    location ~* \.(jpg|jpeg|png|gif|ico|webp)$ {
        expires 30d;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # Headers de segurança
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Compressão GZIP
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript
               application/javascript application/json application/xml+rss;
}

