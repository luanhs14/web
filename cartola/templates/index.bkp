<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cartola Helper - Escala√ß√£o Inteligente</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-green: #10b981;
            --primary-dark: #059669;
            --accent-orange: #f97316;
            --dark-bg: #0f172a;
            --card-bg: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --field-green: #1a9c53;
            --field-dark: #148045;
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
            --shadow-xl: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
            min-height: 100vh;
            padding: 20px;
            color: var(--text-primary);
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                radial-gradient(circle at 20% 50%, rgba(16, 185, 129, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(249, 115, 22, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: 0;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        .header {
            text-align: center;
            margin-bottom: 50px;
            animation: fadeInDown 0.8s ease-out;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h1 {
            color: var(--text-primary);
            font-size: clamp(2rem, 5vw, 3.5rem);
            font-weight: 800;
            margin-bottom: 15px;
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--accent-orange) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: -0.02em;
        }

        .subtitle {
            text-align: center;
            color: var(--text-secondary);
            margin-bottom: 20px;
            font-size: clamp(1rem, 2vw, 1.2rem);
            font-weight: 400;
            line-height: 1.6;
        }

        .formation-info {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
            border: 1px solid rgba(16, 185, 129, 0.2);
            animation: fadeIn 1s ease-out 0.2s both;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .formation-info strong {
            color: var(--primary-green);
            font-weight: 600;
            font-size: 0.95rem;
        }

        .formation-info span {
            display: inline-block;
            margin: 8px 12px;
            padding: 6px 14px;
            background: rgba(16, 185, 129, 0.1);
            border-radius: 20px;
            font-size: 0.9rem;
            color: var(--text-primary);
            border: 1px solid rgba(16, 185, 129, 0.2);
            transition: all 0.3s ease;
        }

        .formation-info span:hover {
            background: rgba(16, 185, 129, 0.2);
            transform: translateY(-2px);
        }


        .upload-section {
            background: var(--card-bg);
            border: 2px dashed rgba(16, 185, 129, 0.3);
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .upload-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at center, rgba(16, 185, 129, 0.05) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .upload-section:hover::before {
            opacity: 1;
        }

        .upload-section:hover {
            border-color: var(--primary-green);
            background: rgba(16, 185, 129, 0.05);
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
        }

        .upload-section.dragover {
            border-color: var(--accent-orange);
            background: rgba(249, 115, 22, 0.1);
            transform: scale(1.02);
        }

        .upload-section.youtube {
            border-color: rgba(249, 115, 22, 0.3);
        }

        .upload-section.youtube:hover {
            border-color: var(--accent-orange);
            background: rgba(249, 115, 22, 0.05);
        }

        input[type="file"] {
            display: none;
        }

        .upload-btn {
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 14px 32px;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
            position: relative;
            overflow: hidden;
        }

        .upload-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .upload-btn:hover::before {
            width: 300px;
            height: 300px;
        }

        .upload-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
        }

        .upload-btn:active {
            transform: translateY(-1px);
        }

        .section-icon {
            font-size: 3rem;
            margin-bottom: 15px;
            display: block;
            filter: drop-shadow(0 0 20px rgba(16, 185, 129, 0.3));
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 10px;
        }

        .section-description {
            font-size: 0.9rem;
            color: var(--text-secondary);
            line-height: 1.5;
        }

        .instructions-box {
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.3);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 20px;
            text-align: center;
        }

        .instructions-box p {
            color: var(--text-primary);
            margin-bottom: 8px;
            font-size: 1rem;
        }

        .simple-input {
            width: 100%;
            padding: 24px;
            border: 4px solid #10b981;
            border-radius: 16px;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            font-size: 16px;
            background: #1e293b;
            color: #f1f5f9;
            transition: all 0.2s ease;
            box-shadow: 0 4px 16px rgba(16, 185, 129, 0.3);
            text-align: center;
            -webkit-user-select: text;
            -moz-user-select: text;
            -ms-user-select: text;
            user-select: text;
            -webkit-touch-callout: default;
        }

        .simple-input:focus {
            outline: none;
            border-color: #059669;
            background: #0f172a;
            box-shadow: 0 0 0 6px rgba(16, 185, 129, 0.3), 0 4px 16px rgba(16, 185, 129, 0.4);
        }

        .simple-input::placeholder {
            color: #94a3b8;
            font-size: 15px;
        }

        @media (max-width: 768px) {
            .simple-input {
                font-size: 16px;
                padding: 28px 20px;
                min-height: 70px;
            }
        }


        .process-btn {
            background: linear-gradient(135deg, var(--accent-orange) 0%, #ea580c 100%);
            color: white;
            padding: 18px 40px;
            border: none;
            border-radius: 16px;
            font-size: 1.15rem;
            font-weight: 700;
            cursor: pointer;
            margin-top: 30px;
            width: 100%;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 8px 24px rgba(249, 115, 22, 0.3);
            position: relative;
            overflow: hidden;
            animation: fadeIn 1s ease-out 0.6s both;
        }

        .process-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .process-btn:hover::before {
            width: 400px;
            height: 400px;
        }

        .process-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 32px rgba(249, 115, 22, 0.4);
        }

        .process-btn:active {
            transform: translateY(-1px);
        }

        .process-btn:disabled {
            background: linear-gradient(135deg, #475569 0%, #334155 100%);
            cursor: not-allowed;
            opacity: 0.5;
            box-shadow: none;
            transform: none;
        }

        .loading {
            display: none;
            text-align: center;
            margin: 40px 0;
            animation: fadeIn 0.5s ease-out;
        }

        .loading.active {
            display: block;
        }

        .spinner {
            width: 60px;
            height: 60px;
            margin: 0 auto 20px;
            position: relative;
        }

        .spinner::before,
        .spinner::after {
            content: '';
            position: absolute;
            border-radius: 50%;
        }

        .spinner::before {
            width: 100%;
            height: 100%;
            border: 4px solid rgba(16, 185, 129, 0.2);
            border-top-color: var(--primary-green);
            animation: spin 1s linear infinite;
        }

        .spinner::after {
            width: 40px;
            height: 40px;
            top: 10px;
            left: 10px;
            border: 4px solid rgba(249, 115, 22, 0.2);
            border-top-color: var(--accent-orange);
            animation: spin 0.7s linear infinite reverse;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .loading-text {
            color: var(--text-secondary);
            font-size: 1rem;
            font-weight: 500;
        }

        .results {
            display: none;
            margin-top: 50px;
        }

        .results.active {
            display: block;
            animation: fadeIn 0.6s ease-out;
        }

        .results-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .results-header h2 {
            font-size: clamp(1.8rem, 4vw, 2.5rem);
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--accent-orange) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
        }

        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: var(--card-bg);
            border: 1px solid rgba(16, 185, 129, 0.2);
            padding: 30px 20px;
            border-radius: 16px;
            text-align: center;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-green) 0%, var(--accent-orange) 100%);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary-green);
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-green);
            margin-bottom: 8px;
        }

        .stat-label {
            font-size: 0.95rem;
            color: var(--text-secondary);
            font-weight: 500;
        }

        .lineup-display {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 35px;
            margin-top: 30px;
            border: 1px solid rgba(16, 185, 129, 0.2);
            box-shadow: var(--shadow-lg);
        }

        .position-group {
            margin-bottom: 30px;
            animation: fadeIn 0.6s ease-out;
        }

        .position-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--primary-green);
            margin-bottom: 18px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .position-title::before {
            content: '';
            width: 4px;
            height: 24px;
            background: linear-gradient(180deg, var(--primary-green) 0%, var(--accent-orange) 100%);
            border-radius: 2px;
        }

        .player-card {
            background: rgba(16, 185, 129, 0.05);
            padding: 18px 22px;
            margin: 12px 0;
            border-radius: 14px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(16, 185, 129, 0.15);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .player-card::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: var(--primary-green);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        .player-card:hover::before {
            transform: scaleY(1);
        }

        .player-card:hover {
            transform: translateX(8px);
            background: rgba(16, 185, 129, 0.1);
            border-color: var(--primary-green);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
        }

        .player-name {
            font-size: 1.15rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .player-variants {
            font-size: 0.85rem;
            color: var(--text-secondary);
            margin-top: 4px;
        }

        .player-count {
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 8px 18px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 1rem;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
            min-width: 50px;
            text-align: center;
        }

        .error {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #fca5a5;
            padding: 18px 22px;
            border-radius: 12px;
            margin: 20px 0;
            display: none;
            animation: shake 0.5s ease-out;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
            20%, 40%, 60%, 80% { transform: translateX(5px); }
        }

        .error.active {
            display: block;
        }

        .toast {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: var(--card-bg);
            color: var(--text-primary);
            padding: 18px 24px;
            border-radius: 12px;
            box-shadow: var(--shadow-xl);
            border: 1px solid rgba(16, 185, 129, 0.3);
            z-index: 1000;
            animation: slideInRight 0.4s ease-out;
            max-width: 400px;
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(100px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Responsividade */
        @media (max-width: 768px) {
            body {
                padding: 10px;
            }

            h1 {
                font-size: 2rem;
            }

            .formation-info span {
                display: block;
                margin: 6px 0;
            }

            .stats {
                grid-template-columns: 1fr;
            }

            .lineup-display {
                padding: 20px;
            }

            .process-btn {
                padding: 15px 30px;
                font-size: 1rem;
            }

            .upload-section {
                padding: 30px 20px;
            }

            .section-icon {
                font-size: 2.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>‚öΩ Cartola Helper</h1>
            <p class="subtitle">Envie prints das escala√ß√µes dos youtubers e descubra os jogadores mais escalados!</p>
        </div>

        <div class="formation-info">
            <strong>Forma√ß√£o:</strong>
            <span>1 Goleiro</span>
            <span>1 T√©cnico</span>
            <span>2 Zagueiros</span>
            <span>2 Laterais</span>
            <span>3 Meias</span>
            <span>3 Atacantes</span>
        </div>

        <div style="max-width: 800px; margin: 0 auto;">
            <!-- YouTube -->
            <div class="upload-section youtube">
                <span class="section-icon">üé•</span>
                <p class="section-title">Links do YouTube</p>

                <div class="instructions-box">
                    <p><strong>üì± Como usar:</strong></p>
                    <ol style="text-align: left; margin: 10px 0; padding-left: 20px; color: var(--text-secondary); font-size: 0.9rem;">
                        <li>Copie o link do YouTube (bot√£o compartilhar)</li>
                        <li>Volte aqui e toque no campo abaixo</li>
                        <li><strong>Toque LONGO</strong> (segure 1-2 segundos)</li>
                        <li>Escolha "Colar" no menu que aparecer</li>
                    </ol>
                </div>

                <label for="youtubeUrls" style="display: block; margin-bottom: 15px; color: #10b981; font-weight: 700; font-size: 1.1rem; text-align: center;">
                    üëá TOQUE E SEGURE AQUI PARA COLAR üëá
                </label>

                <input
                    type="text"
                    id="youtubeUrls"
                    class="simple-input"
                    placeholder="Toque e segure aqui para colar..."
                />

                <p class="section-description" style="margin-top: 15px; font-size: 0.9rem;">
                    ‚ÑπÔ∏è Cole um link por vez. Depois de processar, pode adicionar mais.
                </p>
            </div>
        </div>

        <button class="process-btn" id="processBtn" disabled>
            üîç Processar e Gerar Escala√ß√£o
        </button>

        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p class="loading-text">Processando dados...</p>
        </div>

        <div class="error" id="error"></div>

        <div class="results" id="results">
            <div class="results-header">
                <h2>üìä Escala√ß√£o Recomendada</h2>
            </div>

            <div class="stats" id="stats"></div>

            <div class="lineup-display" id="lineupDisplay"></div>
        </div>
    </div>

    <script>
        const processBtn = document.getElementById('processBtn');
        const loading = document.getElementById('loading');
        const results = document.getElementById('results');
        const error = document.getElementById('error');
        const statsDiv = document.getElementById('stats');
        const lineupDisplay = document.getElementById('lineupDisplay');
        const youtubeUrlsTextarea = document.getElementById('youtubeUrls');

        function showToast(message, duration = 3000) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.textContent = message;
            document.body.appendChild(toast);

            setTimeout(() => {
                toast.style.animation = 'slideInRight 0.4s ease-out reverse';
                setTimeout(() => toast.remove(), 400);
            }, duration);
        }

        function updateProcessButton() {
            const youtubeUrl = youtubeUrlsTextarea.value.trim();
            processBtn.disabled = youtubeUrl.length === 0;
        }

        // Atualiza o bot√£o quando o usu√°rio digita
        youtubeUrlsTextarea.addEventListener('input', () => {
            updateProcessButton();
            if (youtubeUrlsTextarea.value.trim().length > 10) {
                showToast('‚úÖ Link detectado!', 2000);
            }
        });

        // Feedback quando cola
        youtubeUrlsTextarea.addEventListener('paste', () => {
            setTimeout(() => {
                updateProcessButton();
                if (youtubeUrlsTextarea.value.trim().length > 0) {
                    showToast('‚úÖ Link colado com sucesso!', 2500);
                }
            }, 100);
        });

        // Mostra feedback quando foca no campo
        let focusShown = false;
        youtubeUrlsTextarea.addEventListener('focus', () => {
            if (!focusShown && !youtubeUrlsTextarea.value.trim()) {
                showToast('üí° Toque LONGO e escolha "Colar"', 3000);
                focusShown = true;
            }
        });

        processBtn.addEventListener('click', async () => {
            const youtubeUrl = youtubeUrlsTextarea.value.trim();

            if (!youtubeUrl) {
                showToast('‚ùå Cole um link primeiro!', 2000);
                return;
            }

            loading.classList.add('active');
            error.classList.remove('active');
            results.classList.remove('active');
            processBtn.disabled = true;

            try {
                // Processa YouTube (array com um √∫nico link)
                const urls = [youtubeUrl];

                const youtubeResponse = await fetch('/process_youtube', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ urls: urls })
                });

                const data = await youtubeResponse.json();

                if (!youtubeResponse.ok) {
                    throw new Error(data.error || 'Erro ao processar v√≠deo do YouTube');
                }

                // Agora calcula a escala√ß√£o
                const lineupResponse = await fetch('/calculate_lineup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        player_data: data.matched_players
                    })
                });

                const lineupData = await lineupResponse.json();

                displayResults(data, lineupData);
                showToast('‚úÖ Escala√ß√£o gerada com sucesso!');

            } catch (err) {
                showError(err.message);
                showToast('‚ùå Erro ao processar dados', 4000);
            } finally {
                loading.classList.remove('active');
                processBtn.disabled = false;
            }
        });

        function displayResults(data, lineupData) {
            // Estat√≠sticas
            statsDiv.innerHTML = `
                <div class="stat-card">
                    <div class="stat-value">${data.all_players_count}</div>
                    <div class="stat-label">Jogadores Encontrados</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">${data.unique_players}</div>
                    <div class="stat-label">Jogadores √önicos</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">1</div>
                    <div class="stat-label">V√≠deo Analisado</div>
                </div>
            `;

            // Escala√ß√£o
            const posicoes = {
                'gol': 'Goleiro',
                'tec': 'T√©cnico',
                'zag': 'Zagueiro',
                'lat': 'Lateral',
                'mei': 'Meia',
                'ata': 'Atacante'
            };

            let lineupHTML = '';

            for (const [pos, title] of Object.entries(posicoes)) {
                const players = lineupData.lineup[pos] || [];
                
                lineupHTML += `
                    <div class="position-group">
                        <div class="position-title">${title}${players.length > 1 ? 's' : ''}</div>
                `;

                if (players.length === 0) {
                    lineupHTML += `
                        <div class="player-card">
                            <span style="color: #999;">Nenhum jogador encontrado nesta posi√ß√£o</span>
                        </div>
                    `;
                } else {
                    players.forEach(player => {
                        lineupHTML += `
                            <div class="player-card">
                                <div>
                                    <div class="player-name">${player.nome}</div>
                                    ${player.variants.length > 1 ?
                                        `<div class="player-variants">Varia√ß√µes: ${player.variants.slice(0, 3).join(', ')}</div>` :
                                        ''
                                    }
                                </div>
                                <div class="player-count">${player.count}x</div>
                            </div>
                        `;
                    });
                }

                lineupHTML += `</div>`;
            }

            if (lineupData.unknown_players && lineupData.unknown_players.length > 0) {
                lineupHTML += `
                    <div class="position-group">
                        <div class="position-title">‚ö†Ô∏è Jogadores N√£o Identificados (posi√ß√£o desconhecida)</div>
                `;
                lineupData.unknown_players.forEach(player => {
                    lineupHTML += `
                        <div class="player-card">
                            <div>
                                <div class="player-name">${player.nome}</div>
                            </div>
                            <div class="player-count">${player.count}x</div>
                        </div>
                    `;
                });
                lineupHTML += `</div>`;
            }

            // Debug: Mostra jogadores extra√≠dos
            if (data.processing_results && data.processing_results.length > 0) {
                lineupHTML += `
                    <div class="position-group" style="margin-top: 40px; padding-top: 30px; border-top: 1px solid rgba(16, 185, 129, 0.2);">
                        <div class="position-title" style="font-size: 1.1rem; color: var(--text-secondary);">üîç Detalhes do Processamento</div>
                `;
                data.processing_results.forEach(file => {
                    lineupHTML += `
                        <div style="margin: 15px 0; padding: 18px; background: rgba(16, 185, 129, 0.05); border-radius: 12px; border: 1px solid rgba(16, 185, 129, 0.15);">
                            <strong style="color: var(--text-primary);">üìÑ ${file.filename || file.url}</strong>
                            <span style="color: var(--text-secondary);"> - ${file.players_found} jogador(es) encontrado(s)</span>
                    `;
                    
                    // Mostra erros se houver
                    if (file.error) {
                        lineupHTML += `
                            <div style="margin-top: 12px; padding: 12px; background: rgba(239, 68, 68, 0.1); border-left: 4px solid #ef4444; border-radius: 8px;">
                                <strong style="color: #fca5a5;">‚ö†Ô∏è Erro:</strong>
                                <span style="color: var(--text-secondary);"> ${file.error}</span>
                            </div>
                        `;
                    }

                    // Mostra jogadores extra√≠dos
                    if (file.players && file.players.length > 0) {
                        lineupHTML += `
                            <div style="margin-top: 12px;">
                                <strong style="color: var(--text-primary); font-size: 0.9rem;">Jogadores extra√≠dos:</strong>
                                <div style="display: flex; flex-wrap: wrap; gap: 8px; margin-top: 10px;">
                        `;
                        file.players.forEach(player => {
                            lineupHTML += `<span style="background: rgba(16, 185, 129, 0.15); color: var(--text-primary); padding: 6px 12px; border-radius: 16px; font-size: 0.85em; border: 1px solid rgba(16, 185, 129, 0.25);">${player}</span>`;
                        });
                        lineupHTML += `</div></div>`;
                    } else {
                        lineupHTML += `
                            <div style="margin-top: 12px; padding: 12px; background: rgba(249, 115, 22, 0.1); border-left: 4px solid var(--accent-orange); border-radius: 8px;">
                                <span style="color: var(--text-secondary);">‚ö†Ô∏è Nenhum jogador extra√≠do desta fonte</span>
                            </div>
                        `;
                    }

                    // Mostra preview do OCR se dispon√≠vel
                    if (file.ocr_preview && file.ocr_preview.length > 10) {
                        lineupHTML += `
                            <div style="margin-top: 12px;">
                                <details>
                                    <summary style="cursor: pointer; color: var(--text-secondary); font-size: 0.9rem;">üìù Ver texto extra√≠do pelo OCR (${file.ocr_preview.length} caracteres)</summary>
                                    <pre style="margin-top: 10px; padding: 12px; background: rgba(30, 41, 59, 0.5); border-radius: 8px; font-size: 0.85em; max-height: 200px; overflow-y: auto; color: var(--text-secondary); border: 1px solid rgba(16, 185, 129, 0.15);">${file.ocr_preview}</pre>
                                </details>
                            </div>
                        `;
                    }
                    
                    lineupHTML += `</div>`;
                });
                lineupHTML += `</div>`;
            }

            lineupDisplay.innerHTML = lineupHTML;
            results.classList.add('active');

            // Scroll suave para os resultados
            setTimeout(() => {
                results.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 300);
        }

        function showError(message) {
            error.textContent = `‚ùå Erro: ${message}`;
            error.classList.add('active');
            setTimeout(() => {
                error.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }, 100);
        }
    </script>
</body>
</html>

